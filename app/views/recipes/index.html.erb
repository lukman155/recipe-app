<p style="color: green"><%= notice %></p>

<%= link_to "New recipe", new_recipe_path %>

<div id="recipes">
    <% @recipes.each do |recipe| %>
      
      <div style="display: flex; justify-content: space-between; border: 1px solid; margin-bottom: 10px; padding: 10px">
        <div style="width: 20%;">
          <p><%= recipe.name %></p>
          <%= link_to 'Remove', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        <div>
          <p><%= recipe.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

