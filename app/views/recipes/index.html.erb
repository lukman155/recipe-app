<%= link_to "New recipe", new_recipe_path, class:'btn btn-secondary' %>

<div id="recipes">
  <% @recipes.each do |recipe| %>
      <div style="display: flex; justify-content: space-between; border: 1px solid; margin-bottom: 10px; padding: 10px">
        <div style="width: 20%;">
          <p><%= link_to recipe.name, recipe_path(recipe) %></p>
          <% if recipe.user == current_user %>
            <%= button_to "Delete", recipe_path(recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger" %>
          <% end %>        
        </div>
        <div>
          <p><%= recipe.description %></p>
        </div>
      </div>
    <% end %>
</div>


