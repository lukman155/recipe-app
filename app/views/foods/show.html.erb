<div class="container">
  <%= render @food %>

  <div class="mt-4 d-flex gap-3">
    <%= link_to "Edit this food", edit_food_path(@food), class: "btn btn-secondary" %>
    <%= button_to "Destroy this food", @food, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <%= link_to "Back to foods", foods_path, class: "btn btn-primary" %>
  </div>
</div>
